@model DVHTUS.Models.DangKyHocPhan

@{
    ViewData["Title"] = "Create";
}

<style>
    .wrapper {
        box-shadow: 0 0 20px rgba(0, 0, 0, .12);
        border-radius: 0.375rem;
    }
</style>

<div class="row d-flex justify-content-center">
    <div class="col-5 wrapper p-5">
        <h1 class="text-center">Đăng ký học phần</h1>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="NgayDangKy" class="control-label"></label>
                <input asp-for="NgayDangKy" class="form-control" />
                <span asp-validation-for="NgayDangKy" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="SinhVienID" class="control-label"></label>
                <select asp-for="SinhVienID" class ="form-control" asp-items="ViewBag.SinhVienID"></select>
            </div>
            <div class="form-group mt-3">
                <label asp-for="LopHPID" class="control-label"></label>
                <select asp-for="LopHPID" class ="form-control" asp-items="ViewBag.LopHPID"></select>
            </div>
            <div class="action d-flex gap-5 mt-3">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </form>

        <div>
            
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
